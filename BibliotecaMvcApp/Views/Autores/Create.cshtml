@model BibliotecaMvcApp.Models.Autor

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h2 class="text-center mb-4">ðŸ‘¤ Criar Autor</h2>

                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label fw-bold"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do autor" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DataNascimento" class="form-label fw-bold"></label>
                            <input asp-for="DataNascimento" class="form-control" type="date" />
                            <span asp-validation-for="DataNascimento" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DataFalecimento" class="form-label fw-bold"></label>
                            <input asp-for="DataFalecimento" class="form-control" type="date" />
                            <span asp-validation-for="DataFalecimento" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nacionalidade" class="form-label fw-bold"></label>
                            <input asp-for="Nacionalidade" class="form-control" placeholder="Digite a nacionalidade" />
                            <span asp-validation-for="Nacionalidade" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Biografia" class="form-label fw-bold"></label>
                            <textarea asp-for="Biografia" class="form-control" placeholder="Biografia"></textarea>
                            <span asp-validation-for="Biografia" class="text-danger small"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-100 py-2">ðŸ’¾ Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>