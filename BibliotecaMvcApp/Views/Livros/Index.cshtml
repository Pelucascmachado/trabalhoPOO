@model IEnumerable<BibliotecaMvcApp.Models.Livro>

@{
    ViewData["Title"] = "Lista de Livros";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-journal-bookmark-fill me-1"></i> Lista de Livros
            </h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Novo Livro
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Título</th>
                            <th>Ano</th>
                            <th>Autor</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var livro in Model)
                        {
                            <tr>
                                <td>@livro.Titulo</td>
                                <td>@livro.AnoPublicacao</td>
                                <td>@livro.Autor?.Nome</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@livro.LivroId" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@livro.LivroId" class="btn btn-sm btn-outline-danger" title="Excluir">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
