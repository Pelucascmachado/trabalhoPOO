@model BibliotecaMvcApp.Models.LivroViewModel

<h2>Editar Livro</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="LivroId" />

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnoPublicacao"></label>
        <input asp-for="AnoPublicacao" class="form-control" />
        <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Autor existente</label>
        <select asp-for="AutorId" asp-items="@(new SelectList(ViewBag.Autores, "AutorId", "Nome"))" class="form-control">
            <option value="">-- Selecione um autor --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Ou digite um novo autor</label>
        <input asp-for="NovoAutor" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
