@model BibliotecaMvcApp.Models.Livro

<h2>Excluir Livro</h2>

<div>
    <h4>Você tem certeza que deseja excluir este livro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Ano</dt>
        <dd class="col-sm-10">@Model.AnoPublicacao</dd>

        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor?.Nome</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LivroId" />
        <button type="submit" class="btn btn-danger">Confirmar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
