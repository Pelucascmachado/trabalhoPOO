@model BibliotecaMvcApp.Models.Livro

<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Excluir Livro</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger mb-4">⚠️ Você tem certeza que deseja excluir este livro?</h4>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">📚 Título:</dt>
                <dd class="col-sm-9">@Model.Titulo</dd>

                <dt class="col-sm-3 fw-bold">📅 Ano de Publicação:</dt>
                <dd class="col-sm-9">@Model.AnoPublicacao</dd>

                <dt class="col-sm-3 fw-bold">✍️ Autor:</dt>
                <dd class="col-sm-9">@Model.Autor?.Nome</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="LivroId" />
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger px-4">🗑️ Confirmar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">↩️ Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
